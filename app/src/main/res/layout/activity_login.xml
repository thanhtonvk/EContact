<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="323dp"
            android:layout_marginBottom="620dp"
            android:src="@drawable/ic_logo_truong" />


        <EditText
            android:id="@+id/editTK"
            android:layout_width="323dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="235dp"
            android:layout_marginEnd="51dp"
            android:background="@drawable/vien"
            android:drawableLeft="@drawable/ic_person"
            android:ems="10"
            android:hint="Nhập tài khoản"
            android:inputType="textPersonName"
            android:longClickable="false"
            android:paddingLeft="30dp"
            android:textColor="@color/black"
            android:textColorHint="#A18B8B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:passwordToggleEnabled="true" />

        <EditText
            android:id="@+id/edit_MK"
            android:layout_width="317dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="84dp"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="357dp"
            android:background="@drawable/vien"
            android:drawableLeft="@drawable/ic_lock"
            android:drawableRight="@drawable/ic_eye"
            android:ems="10"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            android:paddingLeft="30dp"
            android:textColor="@color/black"
            android:textColorHint="#A18B8B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <Button
            android:id="@+id/Quenmatkhau"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="145dp"
            android:layout_marginBottom="235dp"
            android:background="@drawable/bogoc"
            android:backgroundTint="#80D8FF"
            android:text="Đăng Nhập"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <CheckBox
            android:id="@+id/HienMatkhau"
            android:layout_width="171dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="221dp"
            android:layout_marginLeft="50dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="306dp"
            android:text="Quên mật khẩu"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="77dp"
            android:layout_marginTop="128dp"
            android:layout_marginEnd="57dp"
            android:layout_marginBottom="502dp"
            android:background="@color/white"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="50dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="94dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="614dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="Đại Học Sư Phạm Kĩ Thuật
            Hưng Yên"
            android:textColor="#F6C503"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>