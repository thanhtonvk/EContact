<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/hinh_nen"
    tools:context=".Activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:text="Trường Đại Học Sư Phạm Kĩ Thuật Hưng Yên
            Khoa Công Nghệ Thông Tin"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/ic_logo_khoa_cntt" />

        <EditText
            android:id="@+id/edt_tai_khoan"
            android:layout_width="323dp"
            android:layout_height="52dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="270dp"
            android:background="@drawable/vien"
            android:drawableLeft="@drawable/ic_person"
            android:ems="10"
            android:hint="Nhập tài khoản"
            android:inputType="number"
            android:longClickable="false"
            android:paddingLeft="25dp"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_mat_khau"
            android:layout_width="323dp"
            android:layout_height="52dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/vien"
            android:drawableLeft="@drawable/ic_lock"
            android:drawableRight="@drawable/ic_eye"
            android:ems="10"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            android:paddingLeft="25dp"
            android:paddingRight="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:passwordToggleEnabled="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <Button
            android:id="@+id/btn_dang_nhap"
            android:layout_width="190dp"
            android:layout_height="45dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="470dp"
            android:background="@drawable/goc_bo_tron"
            android:backgroundTint="#068940"
            android:text="Đăng Nhập"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/edt_quen_mat_khau"
            android:layout_width="135dp"
            android:layout_height="44dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="400dp"
            android:text="Quên mật khẩu"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>