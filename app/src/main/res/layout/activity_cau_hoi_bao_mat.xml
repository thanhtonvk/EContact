<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/hinh_nen"
    tools:context=".Activity.CauHoiBaoMat_Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:text="Lấy lại mật khẩu"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="40dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTK"
            android:layout_width="323dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="51dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/vien"
            android:drawableLeft="@drawable/ic_person"
            android:ems="10"
            android:hint="Tên đăng nhập"
            android:inputType="textPersonName"
            android:longClickable="false"
            android:paddingLeft="30dp"
            android:textColor="@color/black"
            android:textColorHint="#A18B8B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:passwordToggleEnabled="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/inputMaKiemTra"
                android:layout_width="184dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/vien"
                android:drawableLeft="@drawable/ic_autorenew"
                android:ems="10"
                android:hint="Mã kiểm tra"
                android:inputType="textPassword"
                android:paddingLeft="10dp" />

            <EditText
                android:id="@+id/inputNhapMaKiemTra"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/vien"
                android:drawableLeft="@drawable/ic_key"
                android:ems="10"
                android:hint="Nhập Mã kiểm tra"
                android:inputType="textPassword"
                android:paddingLeft="10dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Xác Nhận"
            android:background="@drawable/goc_bo_tron"
            android:backgroundTint="#068940"
            android:id="@+id/btnXacNhan"
            android:textAllCaps="false"
            android:layout_gravity="center"/>

    </LinearLayout>

  </LinearLayout>